<div class="container" style="text-align: center; border: 1.5px solid lightgrey;">
	<h2>Edit <%= entry.title %></h2>

<form action="/posts/<%= entry._id %>?_method=PUT" method="POST">
	<div class="wrapper">
		<div class="form-group">
		<input class="formElement" type="text" name="title" value="<%= entry.title %>"><br>
		<input class="formElement" type="text" name="caption" value="<%= entry.caption %>"><br>
		<input class="formElement" type="text" name="image" value="<%= entry.image %>"><br>
		<textarea class="formElement" type="text" name="content" rows="4"><%= entry.content %></textarea><br>
		<button class="formElement btn" type="submit" value="submit">Submit</button>
	</div>
</form>
	</div>
</div>


